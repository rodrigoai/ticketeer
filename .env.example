# Auth0 Configuration
# Frontend (VITE_ prefix makes them available in the browser)
VITE_AUTH0_DOMAIN=your-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id
VITE_AUTH0_AUDIENCE=https://your-api.example.com

# Backend (server-side only)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://your-api.example.com

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Database Configuration
# Use only DATABASE_URL for all database connections
# For production, use direct PostgreSQL connection:
DATABASE_URL="postgres://username:password@host:port/database?sslmode=require"
# 
# Alternative options:
# 1. Local SQLite (for quick testing)
# DATABASE_URL="file:./dev.db"
# 2. Prisma Accelerate (if using accelerate proxy)
# DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR-API-KEY"

# AWS SES Configuration (for email sending)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
FROM_EMAIL=noreply@yourdomain.com

# Order Security
ORDER_HASH_SECRET=your-secure-random-secret-key-here
