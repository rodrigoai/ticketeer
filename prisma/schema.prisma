generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id                Int      @id @default(autoincrement())
  name              String
  event_image_url   String?
  promotional_image String?
  opening_datetime  DateTime
  closing_datetime  DateTime
  map_image         String?
  description       String?
  venue             String?
  checkout_page_id  String?
  checkout_page_title String?
  created_by        String
  nextTicketNumber  Int      @default(1)
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt
  status            String   @default("active")
  tickets           Ticket[]

  @@map("events")
}

model UserProfile {
  id                  String   @id
  nova_money_api_key  String
  nova_money_tenant   String
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt

  @@map("user_profiles")
}

model Ticket {
  id                   Int       @id @default(autoincrement())
  eventId              Int
  description          String
  identificationNumber Int
  location             String?
  table                Int?
  price                Decimal
  order                String?
  buyer                String?
  buyerDocument        String?
  buyerPhone           String?
  created_at           DateTime  @default(now())
  updated_at           DateTime  @updatedAt
  buyerEmail           String?
  salesEndDateTime     DateTime?
  checkedIn            Boolean   @default(false)
  checkedInAt          DateTime?
  accessoryCollected   Boolean   @default(false)
  accessoryCollectedAt DateTime?
  accessoryCollectedNotes String?
  event                Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([eventId, identificationNumber])
  @@map("tickets")
}
